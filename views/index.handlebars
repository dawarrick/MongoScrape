<div id="home">
  <div class="container">

    <!-- Jumbotron -->
    <div>
      <img class="img-responsive mx-auto d-block bignews" src="/images/in-the-news_999x333.jpg">
      <!--h5 class="text-center display-1" id="jumboTitle">University of Richmond Newsroom</h5-->
      <!--h5 class="text-center" id="jumboSubtitle"><em>Automobile Management System</em></h5-->
    </div>

    <!-- Filter Search -->
    <!--div class="card">
      <div class="card-header">Search for Articles</div>
      <div class="card-body" id="searchBody">
        <i class="fas fa-search"></i><input class="form-control" id="searchInput" type="text" placeholder="Search...">
      </div>
    </div-->
    <br>

    <!-- Table -->
    <div class="row">
      <div class="col-md-12">
        <div class="card mb-4">
          <div class="card-header"><img class="img-responsive mx-auto d-block spider" src="/images/spider.png">
          <div>University of Richmond Spider's in the News</div>
          </div>
          <div class="card-body">
            <table id="article-table" class="table table-hover display">
              <tbody>
                {{#each articles}}
                <div class="row" id="row" +{{this.id}} data-id="{{this.id}}">
                  <div class="col-lg-3" id="thumbnail{{this.id}}">
                    <!--if no thumbnail image, display the UR shield-->
                    {{#if thumbnail}}
                    <img class="img-fluid mx-auto d-block thumbnail" src={{this.thumbnail}} alt="">
                    {{else}}
                     <img class="img-fluid mx-auto d-block urshield" src="/images/shieldSmall.png" alt="">
                    {{/if}}
                  </div>
                  <div class="col-lg-9 title cols" id="titlelink{{this.id}}"><a target="_blank"
                      href={{this.link}}>{{this.title}}</a>
                    <div class="col-lg-3"></div>
                    <div class="col-lg-8 summary cols" id="summary{{this.id}}"><p>{{this.summary}}</p></div>
                  </div>
                </div>
                <hr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- MODALS -->
<!-- Sold Button Modal -->
<div class="modal" id="soldModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Please enter buyer information below</h5>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <!-- Dropdown button -->
            <div class="form-group">
              <label for="category">Select Customer:</label>
              <select class="custom-select" id="car-customer">
              </select>
            </div>
            <hr>
            <br>
            <div class="row">
              <div class="col">
                <label>Price</label>
                <input type="number" class="form-control" id="car-price" required min="10" max="444444">
              </div>

              <div class="col">
                <label>Date</label>
                <input type="date" class="form-control" id="car-date" required>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" id="modalCloseCust" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" id="submitSold">Submit</button>
            <hr>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Add new car or edit and existing Modal -->
<div class="modal" id="carModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Please enter vehicle information below</h5>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <div class="row">
              <div class="col">
                <label>Year</label>
                <input type="number" class="form-control" id="car-year" required min="1933" max="2025">
              </div>
              <div class="col">
                <label>Make</label>
                <input type="text" class="form-control" id="car-make" required>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col">
                <label>Model</label>
                <input type="text" class="form-control" id="car-model" required>
              </div>

              <div class="col">
                <label>Color</label>
                <input type="text" class="form-control" id="car-color" required>
              </div>

              <div class="col">
                <label>Mileage</label>
                <input type="number" class="form-control" id="car-mileage" required min="0" max="444444">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" id="modalCloseCar" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary" id="submit-car">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Confirm Delete Modal -->
<div class="modal" id="confirmModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete entry</h5>
      </div>
      <div class="modal-body">
        <form>
          <p>
            <h5>Are you sure you want to delete?</h5>
          </p>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" id="modalCloseConfirm">Cancel</button>
            <button type="submit" class="btn btn-primary" id="submit-delete">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/app.js"></script>